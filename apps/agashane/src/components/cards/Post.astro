---
import Image from '../Image.astro';
interface Props {
    title: string;
    slug: string;
    preview: string;
    description: string;
    tags?: string[];
}

const {title, slug, preview, description, tags} = Astro.props;

---
    <article class="card card-image-cover">
        <!-- <img src={`${preview}`} alt={title}  /> -->
        <Image image={preview} alt={title} />
        <div class="card-body">
            {tags && <nav class="mb-2 flex flex-row space-x-2 flex-wrap">
                {tags.slice(0, 3).map(tag => <a 
                href={`/tags/${tag.toLowerCase()}`}
                class="
                    badge badge-flat-primary
                ">{tag}</a>)}
            </nav>}
            <a href={`blog/${slug}`}>
                <h3 class="card-header font-unbound">{title}</h3>
            </a>
            <a href={`blog/${slug}`}>
                <p class="text-content3 text-sm line-clamp-3">{description}</p>
            </a>
        </div>
    </article>