---
import {ArrowRight} from "@phosphor-icons/react";
import {getFeaturedPosts} from "../helpers/posts";
import PostsList from "../components/PostsList.astro";

let posts = (await getFeaturedPosts()).slice(0, 3);
---
<div class="flex flex-col gap-8 my-8">
  <div class="flex flex-row items-center justify-between">
    <h1>
      Explore posts
    </h1>
    <a class="btn btn-solid-primary">
      <span class="mr-2">More posts</span>
      <ArrowRight />
    </a>
  </div>
  <PostsList posts={posts} />
  <section
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 space-y-4"
  >
</div>
